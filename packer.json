{
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "http://cdimage.debian.org/debian-cd/current/i386/iso-cd/debian-7.7.0-i386-netinst.iso",
            "iso_checksum": "76d512c44a9b7eca53ea2812ad5ac36f",
            "iso_checksum_type": "md5",
            "guest_os_type": "Debian",
            "headless": false,
            "disk_size": 5120,
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "http_directory": ".",
            "http_port_min": 9000,
            "http_port_max": 9500,
            "boot_wait": "5s",
            "boot_command": ["<esc><wait>auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/cookbooks/preseed.cfg<enter>"],
            "shutdown_command": "sudo halt -p",
            "vm_name": "pmsiplan"
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "only": ["virtualbox-iso"],
            "inline": [
                "sudo apt-get install -y git curl vim htop",

                "mkdir -pm 700 /home/vagrant/.ssh",
                "echo \"ssh-rsa  vagrant insecure public key\" > /home/vagrant/.ssh/authorized_keys",
                "chmod 0600 /home/vagrant/.ssh/authorized_keys",
                "chown -R vagrant:vagrant /home/vagrant/",

                "curl -L https://www.opscode.com/chef/install.sh | sudo bash -s -- -v 11.10.0"
            ]
        },
        {
            "type": "chef-solo",
            "cookbook_paths": ["berks-cookbooks"],
            "run_list": [
                "apache2::default",
                "pmsiplan::nodejs",
                "pmsiplan::mongodb"
            ],
            "json": {
                "nodejs": {
                    "install_method": "binary"
                }
            }
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "only": ["virtualbox-iso"],
            "keep_input_artifact": true,
            "output": "pmsiplan.box"
        }
    ]
}